                                android:layout_height="wrap_content"
                                android:text="Y"/>

                            <TextView
                                android:id="@+id/team_a_yellow_card_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_height="match_parent" />
                        <!-- Red Card Counter -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/team_a_red_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R"/>

                            <TextView
                                android:id="@+id/team_a_red_card_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/teamAGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:onClick="teamAGoal"
                    android:text="@string/goal" />

                <Button
                    android:id="@+id/teamACornerKick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:onClick="teamACornerKick"
                    android:text="@string/cornerkick" />

                <Button
                    android:id="@+id/teamAGoalKick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:onClick="teamAGoalKick"
                    android:text="@string/goalkick" />

                <Button
