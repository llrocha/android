                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/team_a_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="22sp"
                    android:text="@string/textTeamA" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/team_a_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:text="0"
                        android:textSize="36sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_height="match_parent"/>
                        <!-- Corner Kick Counter -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:orientation="vertical">

                        <TextView
                            android:id="@+id/team_a_corner_kick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="C"/>

                        <TextView
                            android:id="@+id/team_a_corner_kick_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_height="match_parent" />
                        <!-- Goal Kick Counter -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/team_a_goal_kick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="G"/>

                            <TextView
                                android:id="@+id/team_a_goal_kick_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_height="match_parent" />
                        <!-- Thrown-in Counter -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/team_a_throwins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="T"/>

                            <TextView
                                android:id="@+id/team_a_throwins_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_height="match_parent" />
                        <!-- Offsides Counter -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/team_a_offsides"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="O"/>

                            <TextView
                                android:id="@+id/team_a_offsides_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_height="match_parent" />
                        <!-- Fouls Counter -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/team_a_fouls"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="F"/>

                            <TextView
                                android:id="@+id/team_a_fouls_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_height="match_parent" />
                        <!-- Yellow Card Counter -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:orientation="vertical">

