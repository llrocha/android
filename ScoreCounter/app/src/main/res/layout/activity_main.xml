                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_height="match_parent" />
                        <!-- Offsides Counter -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/team_b_offsides"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="O"/>

                            <TextView
                                android:id="@+id/team_b_offsides_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_height="match_parent" />
                        <!-- Fouls Counter -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/team_b_fouls"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="F"/>

                            <TextView
                                android:id="@+id/team_b_fouls_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_height="match_parent" />
                        <!-- Yellow Card Counter -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/team_b_yellow_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Y"/>

                            <TextView
                                android:id="@+id/team_b_yellow_card_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_height="match_parent" />
                        <!-- Red Card Counter -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/team_b_red_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R"/>

                            <TextView
                                android:id="@+id/team_b_red_card_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:background="@color/colorPrimaryDark"
